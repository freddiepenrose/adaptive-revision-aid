<html>

<head>
    <!-- Making website responsive -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Linking the CSS file -->
    <link rel="stylesheet" href="styles.css">
    <!-- Adding Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Title of the webpage -->
    <title>Stats</title>
</head>

<body>
    <!-- The navigation bar -->
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/quiz">Quiz</a></li>
            <li><a href="/stats"><u>Stats</u></a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/signup">Signup</a></li>
        </ul>
    </nav>

    <!-- Graphs and charts -->

    <div class="chart-container" style="width: 50%; margin: 0 auto; height: 400px;">
        <h2>Answer Performance Analysis</h2>
        <canvas id="pieChart"></canvas>
    </div>
    <div class="chart-container" style="width: 50%; margin: 50px auto; height: 400px;">
        <h2>Accuracy for each topic</h2>
        <canvas id="barChart"></canvas>
    </div>

    <!-- JavaScript to create charts -->
    <script>
        // Pie chart data
        let pieData = {
            labels: ["Correct", "Wrong", "Unknown"],
            datasets: [{
                data: [{{ pieChart }}], // Here I've used handlebars to send the data
            backgroundColor: ["green", "red", "purple"]
        }]
        };
        // Bar chart data
        let barData = {
            labels: [
                "1.1.1Architecture of the CPU",
                "1.1.2 CPU performance",
                "1.1.3 Embedded systems",
                "1.2.1 Primary storage",
                "1.2.2 Secondary storage",
                "1.2.3 Units",
                "1.2.4 Data storage",
                "1.2.5 Compression"
            ],
            datasets: [{
                label: "Accuracy",
                data: [{{ barChart }}] // Here I've used handlebars to send the data
        }]
        };

        // Create pie chart
        let pieChartCanvas = document.getElementById("pieChart").getContext('2d');
        let pieChart = new Chart(pieChartCanvas, {
            type: 'pie',
            data: pieData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
            }
        });

        // Create bar chart
        let barChartCanvas = document.getElementById("barChart").getContext('2d');
        let barChart = new Chart(barChartCanvas, {
            type: 'bar',
            data: barData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
            }
        });
    </script>
</body>

</html>